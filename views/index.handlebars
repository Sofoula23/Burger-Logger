<div class="jumbotron jumbotron-fluid bg-transparent text-white">
  <div class="container">
    <h1 class="display-4 text-center">EAT-DA-BURGER!</h1>

  </div>
</div>
<br>
<div class= "text-white">
<h3>Burgers you would like to eat!</h3>
</div>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burger-block}}
  {{/unless}}
  {{/each}}
</ul>
<div class= "text-white">
<h2>Burgers that are devoured!</h2>
</div>
<ul>
  {{#each burgers}}
  
  {{#if devoured}}
  {{> burger-block}}
  {{/if}}
  {{/each}}
</ul>
<div class= "text-white">
<h2>Add a Burger</h2>
</div>
<form id="create-form">

  <div class="form-group">
    <label for="devoured">Burger Name:</label>
    <input type="text" id="ca" name="devoured">
  </div>

  <button type="submit" class= "btn-warning">Add Burger</button>
</form>